                             }
                         }
                     }
                 }
             },

             "responses": {
                 "200": {
                     "description": "OK",
                     "content": {
                         "application/json": {
                             "schema": {
                                 "type": "object",
                                 
                                    "$ref": "#/components/schemas/Product"
                                 
                             }
                         }
                     }
                 }
             }
         }
     },


     "/products/{_id}": {
