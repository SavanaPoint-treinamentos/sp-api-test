            "parameters": [
                {
                    "name": "_id",
                    "description": "Busque o produto usando id",
                    "in": "path",
                    "required": true
                }
            ],
            "responses": {
                "200": {
                    "description": "OK",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                
                                   "$ref": "#/components/schemas/Product"
                                
