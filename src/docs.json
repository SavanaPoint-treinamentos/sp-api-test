            "summary":"Cadastro de produto",
            "description": "Essa rota tem a função de cadastrar produto",
            "tags": ["Products"],
            "responses": {
                "200": {
                    "description": "OK",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                
                                   "$ref": "#/components/schemas/Product"
                                
